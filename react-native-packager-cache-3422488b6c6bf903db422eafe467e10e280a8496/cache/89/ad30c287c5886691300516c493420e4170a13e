var _messages = require('../types/messages');

var types = babelHelpers.interopRequireWildcard(_messages);
function showFailureMessage(message) {
    return {
        type: types.SHOW_FAILURE_MESSAGE_BOX,
        message: message
    };
}

function showSuccessMessage(message) {
    return {
        type: types.SHOW_SUCCESS_MESSAGE_BOX,
        message: message
    };
}

function showNetworkErrorMessage(error, failedOperation) {
    return {
        type: types.SHOW_NETWORK_ERROR_MESSAGE_BOX,
        error: error,
        failedOperation: failedOperation
    };
}

function hideMessageBox() {
    return {
        type: types.HIDE_MESSAGE_BOX
    };
}